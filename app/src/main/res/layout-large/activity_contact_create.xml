<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.example.vraman.infinitecube.ContactCreate">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:fontFamily="@font/alike_angular"
            android:text="Create Contact"
            android:textColor="#0288D1"
            android:textSize="40sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:drawableLeft="@drawable/profileicon2"
            android:drawablePadding="8dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:hint="First Name *" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:drawableLeft="@drawable/profileicon2"
            android:drawablePadding="8dp"
            android:inputType="textPersonName"
            android:hint="Last Name *" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:ems="10"
            android:hint="Phone *"
            android:drawableLeft="@drawable/phoneicon"
            android:drawablePadding="8dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"
            android:hint="Email"/>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:drawableLeft="@drawable/placeholder"
            android:drawablePadding="8dp"
            android:hint="Address *"/>
        <EditText
            android:id="@+id/btncity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:drawableLeft="@drawable/cityicon"
            android:drawablePadding="8dp"
            android:inputType="textPersonName"
            android:hint="City *"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State" />
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/state"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrowdown1"
                android:ems="10"
                android:hint="AL"
                android:textSize="25dp"
                android:focusable="false"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/zipcode"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"
                android:ems="10"
                android:textSize="25dp"
                android:inputType="number"
                android:hint="ZIP Code *" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40sp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancle"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:layout_toLeftOf="@+id/submit"
                android:layout_toStartOf="@+id/submit"
                android:fontFamily="@font/roboto"
                android:background="@drawable/round_boarder"
                android:text="Cancel"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="#0288D1"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/cancle"
                android:layout_alignBottom="@+id/cancle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:background="@drawable/round_boarder"
                android:text="Submit"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="#0288D1" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>