<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.vraman.infinitecube.LeadCreate">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/alike_angular"
        android:text="Create Lead"
        android:textColor="#0288D1"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="50dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:drawableLeft="@drawable/profileicon2"
        android:drawablePadding="8dp"
        android:hint="First Name *" />

    <EditText
        android:id="@+id/et_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_firstName"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="50dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:drawableLeft="@drawable/profileicon2"
        android:drawablePadding="8dp"
        android:inputType="textPersonName"
        android:hint="Last Name *" />

    <EditText
        android:id="@+id/et_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_lastName"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="50dp"
        android:ems="10"
        android:hint="Phone *"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:drawableLeft="@drawable/phoneicon"
        android:drawablePadding="8dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_phoneNumber"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="50dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/emailicon"
        android:drawablePadding="8dp"
        android:hint="Email"/>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_below="@+id/et_email"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="63dp"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/round_boarder"
        android:fontFamily="@font/roboto"
        android:text="Cancel"
        android:textSize="40sp"
        android:textAllCaps="false"
        android:textColor="#0288D1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignRight="@+id/et_email"
        android:background="@drawable/round_boarder"
        android:text="Create"
        android:textSize="40sp"
        android:padding="15dp"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:textColor="#0288D1"/>

</RelativeLayout>
